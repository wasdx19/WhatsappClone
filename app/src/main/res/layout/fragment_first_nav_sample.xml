        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:text="Go to second fragment"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>